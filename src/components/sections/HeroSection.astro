---
import Icon from '../ui/Icon.astro';
---

<section 
  id="hero"
  class="relative h-screen w-screen flex flex-col justify-center items-center snap-start"
>
  <div 
    class="absolute inset-0 bg-cover bg-center"
    style="background-image: url('/images/placeholders/hero-bg.jpg'); filter: brightness(0.6);"
  ></div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  
  <div class="z-10 max-w-xs text-center space-y-6 px-6">
    <h1 class="text-3xl font-light tracking-widest">HALM COLLECTIVE</h1>
    <p class="text-base font-light">
      Where time surrenders to intention
    </p>
    <Icon name="chevron-down" size={32} class="mx-auto mt-12 animate-bounce" />
  </div>
</section>