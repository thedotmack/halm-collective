<section id="hero" class="fullpage-section">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" 
       style="background-image: url('/images/placeholders/hero-bg.jpg');">
    <div class="absolute inset-0 bg-black/60"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 h-full w-full flex flex-col items-center justify-center">
    <div class="max-w-md px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-light tracking-widest mb-4">
        HALM COLLECTIVE
      </h1>
      <p id="cycling-tagline" class="text-lg md:text-xl font-light text-gray-200 mb-10 transition-opacity duration-1000">
        step in. slow down. find the moments that matter most
      </p>
      
      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce flex justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </div>
    </div>
  </div>

  <!-- Script for Cycling Taglines -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const taglines = [
        "your rhythm, rediscovered",
        "calm cultivates clarity",
        "time flows with intention, not industry",
        "moments measured in meaning, not minutes",
        "step in. slow down. find the moments that matter most"
      ];
      
      const taglineElement = document.getElementById('cycling-tagline');
      let currentTagline = 0;
      
      function cycleTaglines() {
        // Start fade out
        taglineElement.style.opacity = '0';
        
        // After fade out completes, change text and fade in
        setTimeout(() => {
          // Move to next tagline
          currentTagline = (currentTagline + 1) % taglines.length;
          taglineElement.textContent = taglines[currentTagline];
          
          // Start fade in
          taglineElement.style.opacity = '1';
        }, 1000); // Fade duration in ms
      }
      
      // Start cycling
      setInterval(cycleTaglines, 8000); // Total time per tagline
    });
  </script>
</section>