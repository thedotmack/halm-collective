<section id="schedule" class="fullpage-section bg-[#373221]">
  <div class="relative z-10 h-full w-full flex flex-col items-center justify-center overflow-hidden">
    <div class="max-w-lg px-6 py-8 md:py-0 w-full">
      <h2 class="text-3xl font-light text-center mb-10">RHYTHMS OF TRANSFORMATION</h2>
      
      <div class="grid grid-cols-1 gap-4 max-h-[60vh] overflow-y-auto pr-2 mb-10 class-schedule">
        {scheduleItems.map((item) => (
          <div class="bg-black/40 backdrop-blur-sm p-4 rounded-sm hover:bg-black/50 transition-colors">
            <div class="flex justify-between items-center mb-2">
              <span class="text-[#D2CBBA] font-medium">{item.day}</span>
              <span class="text-xs text-gray-400">{item.time}</span>
            </div>
            <h3 class="text-lg font-medium mb-1">{item.title}</h3>
            <p class="text-sm text-gray-300">{item.description}</p>
          </div>
        ))}
      </div>
      
      <button class="w-full py-4 bg-transparent border border-[#D2CBBA] text-[#D2CBBA] hover:bg-[#D2CBBA] hover:text-black transition-colors text-sm font-medium tracking-wide">
        DISCOVER YOUR JOURNEY
      </button>
    </div>
  </div>
</section>

<style>
  /* Custom scrollbar for schedule */
  .class-schedule::-webkit-scrollbar {
    width: 4px;
