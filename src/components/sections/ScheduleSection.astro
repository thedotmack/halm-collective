---
import Button from '../core/Button.astro';
import ScheduleCard from '../ui/ScheduleCard.astro';

const scheduleItems = [
  {
    day: "Monday",
    time: "9:00 AM - 10:00 AM",
    title: "The Awakening",
    description: "Reformer journey where beginners discover their body's hidden language"
  },
  {
    day: "Tuesday",
    time: "8:30 AM - 9:30 AM",
    title: "Sculptural Dialogue",
    description: "Intimate strength session where limits dissolve and potential emerges"
  },
  {
    day: "Wednesday",
    time: "10:00 AM - 11:00 AM",
    title: "Profound Control",
    description: "Advanced reformer practice where precision becomes meditation"
  }
];
---

<section 
  id="schedule"
  class="h-screen w-screen flex flex-col justify-center snap-start px-6 bg-[#373221] overflow-y-auto"
>
  <div class="relative z-10 py-16">
    <h2 class="text-2xl font-light mb-8 text-center">RHYTHMS OF TRANSFORMATION</h2>
    
    <div class="space-y-4 mb-8">
      {scheduleItems.map((item) => (
        <ScheduleCard
          day={item.day}
          time={item.time}
          title={item.title}
          description={item.description}
        />
      ))}
    </div>
    
    <Button variant="secondary">
      DISCOVER YOUR JOURNEY
    </Button>
  </div>
</section>
